module container_test_mod
  use pfunit_mod
  use container_mod
  use abstract_container_mod
  use iso_fortran_env, only: i1 => int8, i2 => int16, i4 => int32, &
                             i8 => int64, r4 => real32, r8 => real64, &
                             r16 => real128
  implicit none

@TestParameter
  type, extends(abstracttestparameter) :: container_case
    class(container), allocatable :: container_obj
    class(*), allocatable :: inval, outval
    character(len=32) :: container_name
  contains
    procedure :: tostring
  end type container_case
  
@TestCase(testParameters={get_params()}, constructor=new_test)
  type, extends(parameterizedtestcase) :: test_container
    class(container), allocatable :: container_obj
    class(*), allocatable :: inval, outval
  end type test_containers

  interface container_case
    module procedure case_constructor
  end interface container_case

contains

  elemental type(container_case) function constructor(cont, inval, outval, cont_name)
    class(container), intent(in) :: container_obj
    class(*), intent(in) :: inval, outval
    character(len=32), intent(in) :: container_obj
    allocate(constructor%container_obj, source=cont)
    allocate(constructor%inval, source=inval)
    allocate(constructor%outval, source=outval)
    constructor%container_name = cont_name
  end function constructor
  
  elemental function type(test_container) new_test(param)
    type(container_case), intent(in) :: param
    allocate(new_test%container_obj, param%container_obj)
    allocate(new_test%inval, param%inval)
    allocate(new_test%outval, param%outval)
  end function new_test

  function tostring(this) result(string)
    class(container_case), intent(in) :: this
    character(:), allocatable :: string
    string = "container class of dynamic type "//trim(this%container_name)
  end function tostring
  
  function get_params() result(params)
    type(container_case), allocatable :: params(:)
    type(character_container) :: char_c
    type(complex_container) :: comp_c
    type(complex4_container) :: comp4_c
    type(complex8_container) :: comp8_c
    type(complex16_container) :: comp16_c
    type(int_container) :: int_c
    type(int1_container) :: int1_c
    type(int2_container) :: int2_c
    type(int4_container) :: int4_c
    type(int8_container) :: int8_c
    type(logical_container) :: log_c
    type(real_container) :: real_c
    type(real4_container) :: real4_c
    type(real8_container) :: real8_c
    type(real16_container) :: real16_c
    character(len=12) :: charin = 'Hello world!', charout = ''
    complex :: compin = (1.0, 2.0), compout = (0.0, 0.0)
    complex(r4) :: comp4in = (1.0_r4, 2.0_r4), comp4out = (0.0_r4, 0.0_r4)
    complex(r8) :: comp8in = (1.0_r8, 2.0_r8), comp8out = (0.0_r8, 0.0_r8)
    complex(r16) :: comp16in = (1.0_r16, 2.0_r16), comp16out = (0.0_r16, 0.0_r16)
    logical :: login = .true., logout = .false.
    integer :: intin = 1, intout = 0
    integer(i1) :: int1in = 1_i1, int1out = 0_i1
    integer(i2) :: int2in = 1_i2, int2out = 0_i2
    integer(i4) :: int4in = 1_i4, int4out = 0_i4
    integer(i8) :: int8in = 1_i8, int8out = 0_i8
    real :: realin = 1.0, realout = 0.0
    real(r4) :: real4in = 1.0_r4, real4out = 0.0_r4
    real(r8) :: real8in = 1.0_r8, real8out = 0.0_r8
    real(r16) :: real16in = 1.0_r16, real16out = 0.0_r16
    params = [ container_case(char_c, charin, charout, 'character_container'), &
               container_case(comp_c, compin, compout, 'complex_container'), &
               container_case(comp4_c, comp4in, comp4out, 'complex4_container'), &
               container_case(comp8_c, comp8in, comp8out, 'complex8_container'), &
               container_case(comp16_c, comp16in, comp16out, 'complex16_container'), &
               container_case(log_c, login, logout, 'logical_container'), &
               container_case(int_c, intin, intout, 'int_container'), &
               container_case(int1_c, int1in, int1out, 'int1_container'), &
               container_case(int2_c, int2in, int2out, 'int2_container'), &
               container_case(int4_c, int4in, int4out, 'int4_container'), &
               container_case(int8_c, int8in, int8out, 'int8_container'), &
               container_case(real_c, realin, realout, 'real_container'), &
               container_case(real4_c, real4in, real4out, 'real4_container'), &
               container_case(real8_c, real8in, real8out, 'real8_container'), &
               container_case(real16_c, real16in, real16out, 'real16_container') ]
  end function get_params

@Test
  subroutine test_storage(this)
    class(test_container), intent(in) :: this
    class(container), allocatable :: test_subject1, test_subject2
    class(*), allocatable :: outval
    character, dimension(1) :: mold
    allocate(test_subject1, source=this%container_obj)
    allocate(outval, source=this%outval)
    call test_subject1%set(this%inval)
    @assertFalse(all(transfer(this%outval, mold) == transfer(this%inval, mold)), &
                 message='OUTVAL should not have been set equal to INVAL.')
    outval == test_subject1
    @assertEqual(transfer(this%inval, mold), transfer(outval, mold), &
                 message='Container not returning same value placed in it.')
    allocate(test_subject2, source=this%container_obj)
    call test_subject2%set(test_subject1)
    outval = this%outval
    outval = test_subject2
    @assertEqual(transfer(this%inval, mold), transfer(outval, mold), &
                 message='Container not set to value of new container placed in it.')
    call test_subject2%set(this%outval)
    test_subject2 = test_subject1
    outval = this%outval
    outval = test_subject2
    @assertEqual(transfer(this%inval, mold), transfer(outval, mold), &
                 message='Container assigned value of other container.')
  end subroutine test_storage

@Test
  subroutine test_equal_operator(this)
    class(test_container), intent(in)
    class(container), allocatable :: test_subject1, test_subject2
    allocate(test_subject1, source=this%container_obj)
    allocate(test_subject2, source=this%container_obj)
    @assertFalse(all(transfer(outval, mold) == transfer(this%inval, mold)), &
                 message='OUTVAL should not have been set equal to INVAL.')
    test_subject1%set(this%inval)
    test_subject2%set(this%outval)
    @assertFalse(test_subject1 == test_subject2, &
                 message='Containers with different contents should not be equal.')
    test_subject2%set(this%inval)
    @assertTrue(test_subject1 == test_subject2, &
                message='Containers with the same contents should be equal.')
  end subroutine test_equal_operator

@Test
  subroutine test_contents(this)
    class(test_container), intent(in)
    class(container), allocatable :: test_subject
    integer(i1), dimension(1) :: mold
    allocate(test_subject, source=this%container_obj)
    test_subject%set(this%inval)
    @assertEqual(transfer(this%inval, mold), test_subject%contents(), &
                message='Integer representation of container contents &
                &not the same as for value assigned to container.')
  end subroutine test_equal_operator

end module container_test_mod
